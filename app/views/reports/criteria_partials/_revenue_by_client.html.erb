<div class="reports">
  <div class="report_header">
    <div class="report_header_content">
      <%= form_tag "/reports/data/#{@report.report_name}", :method => :get, :remote => true do %>

          <div class="report_clients">
            <div class="control_name">
              <p><%= t('views.common.quarter') %></p>
            </div>
            <div class="client_select">
              <%= select_tag "criteria[quarter]", options_for_select(QUARTER_MONTHS), {:class => "payment-method chzn-select"} %></div>
            <div class="control_name">
              <p><%= t('views.common.year') %></p>
            </div>
            <div class="client_select">
              <%= select_tag "criteria[year]", options_for_select(((Date.today.year - 1)..(Date.today.year + 5)).each { |y| [y, y] }, Date.today.year), {:class => "payment-method chzn-select"} %>
            </div>
            <div class="control_name">
              <p><%= t('header.links.clients.clients') %></p>
            </div>
            <div class="client_select"><%= collection_select "criteria", "client_id", [Client.new({:id => 0, :organization_name => t('views.common.all')})] + get_report_clients, :id, :organization_name, {:prompt => t('views.common.all')}, {:class => "client chzn-select"} %></div>
          </div>
          <div class="report_update">
            <%= submit_tag t('views.common.go'), :class => "report_update" %>
          </div>
      <% end %>
    </div>
  </div>
  <!-- report_header -->
</div><!--reports-->