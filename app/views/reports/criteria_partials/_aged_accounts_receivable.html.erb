<div class="reports aged_accounts">
  <div class="report_header">
    <div class="report_header_content">
      <%= form_tag "/reports/data/#{@report.report_name}", :method => :get, :remote => true, :id => "reports_form" do %>
          <div class="report_date">
            <div class="control_name">
              <p><%= t('views.reports.period_ending') %></p>
            </div>
            <input name="criteria[to_date]" type="text" id="to_date" value="<%= Date.today.strftime(get_date_format) %>"/>
          </div>
          <div class="report_clients">
            <div class="control_name">
              <p><%= t('views.clients.clients') %></p>
            </div>
            <div class="client_select">
              <%= collection_select "criteria", "client_id", [Client.new({:id => 0, :organization_name =>t("views.common.all")})] + get_report_clients, :id, :organization_name, {:prompt => "All"}, {:class => "client chzn-select"} %>
            </div>
          </div>
          <div class="report_update">
            <%= submit_tag t('views.common.go'), :class => "report_update" %>
          </div>
      <% end %>
    </div>
  </div>
  <!-- report_header -->
</div><!--reports-->